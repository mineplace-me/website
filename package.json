{
  "name": "mineplace-monorepo",
  "private": true,
  "engines": {
    "node": ">=23.11.0"
  },
  "scripts": {
    "build": "cd packages/bluemap && bun run build && cd ../mineplace && bun run build",
    "start": "cd packages/bluemap && bun run build && cd ../mineplace && bun run start",
    "serve": "cd packages/mineplace && bun serve"
  },
  "type": "module",
  "devDependencies": {
    "@nx/js": "^22.0.1",
    "nx": "22.0.1",
    "tsx": "^4.20.6",
    "yargs": "^18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "trustedDependencies": [
    "@parcel/watcher",
    "@tailwindcss/oxide"
  ]
}